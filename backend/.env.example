# Copy this file to .env and fill in real values
PORT=5000
MONGO_URI=mongodb://127.0.0.1:27017/xapobank
JWT_SECRET=change-me
CLIENT_URL=http://localhost:8000

# SMTP configuration (example values shown for Mailtrap)
# For Mailtrap use the host/port/user/pass from Mailtrap SMTP settings
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
NOTIFY_FROM="no-reply@xapobank.local"

# If using Gmail SMTP (not recommended for production), set SMTP_HOST=smtp.gmail.com and SMTP_SECURE=true
# For Gmail you may need an App Password and enable less-secure apps depending on your account settings.
